<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main"
    >

    <ImageButton
        android:id="@+id/collectorImageButton"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="280dp"

        android:background="@drawable/bt_main_collector"
        android:onClick="collectorBtnClicked" />

    <ImageButton
        android:id="@+id/finderImageButton"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/bt_main_finder"
        android:onClick="finderBtnClicked"/>

</android.support.constraint.ConstraintLayout>
